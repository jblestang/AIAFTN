// Grammaire PEST pour les messages op√©rationnels AFTN

operational = {
    operational_prefix ~ space+ ~ operational_content
}

operational_prefix = {
    letter{3}
}

operational_content = {
    (!"\n" ~ !"\r" ~ printable_char)*
}

letter = {
    'A'..'Z' | 'a'..'z'
}

digit = {
    '0'..'9'
}

space = {
    " "
}

printable_char = {
    '\x20'..'\x7E' | '\x80'..'\xFF'
}

